<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="invoice_form" model="ir.ui.view">
        <field name="name">l10n_br_account_due_list.invoice.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page
                    string="Receivables"
                    attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund'))]}"
                    name="receivable_move_line_tab"
                >
                    <field name="financial_move_line_ids" >
                        <tree>
                            <field name="date_maturity" />
                            <field name="partner_id" />
                            <field name="account_id" />
                            <field name="balance" />
                            <field name="matching_number" />
                        </tree>
                    </field>
                </page>
                <page
                    string="Payables"
                    attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund'))]}"
                    name="payable_move_line_tab"
                >
                    <field name="financial_move_line_ids" >
                        <tree>
                            <field name="date_maturity" />
                            <field name="partner_id" />
                            <field name="account_id" />
                            <field name="price_total" />
                            <field name="matching_number" />
                        </tree>
                    </field>
                </page>
                <page string="Payments" name="payment_move_line_tab">
                    <field name="payment_move_line_ids" >
                        <tree>
                            <field name="date" />
                            <field name="move_name" />
                            <field name="account_id" />
                            <field name="price_total" />
                            <field name="matching_number" />
                            <field name="parent_state" />
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

</odoo>
