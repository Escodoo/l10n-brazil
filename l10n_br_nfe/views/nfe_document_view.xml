<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="nfe_document_form_inherit" model="ir.ui.view">
      <field name="name">l10n_br_nfe.document.form.inherit</field>
      <field name="model">l10n_br_fiscal.document</field>
      <field name="priority">5</field>
      <field name="inherit_id" ref="l10n_br_fiscal.document_form"/>
      <field name="arch" type="xml">
          <page name="delivery" position="inside">
              <group name="nfe_transport" attrs="{'invisible': [('document_type', 'not in', ['55', '65'])]}">
                  <field name="nfe40_modFrete"/>
                  <field name="nfe40_transporta"/>
              </group>
              <group
                  attrs="{'invisible': [('nfe40_idDest', '!=', '3')]}">
                  <field name="nfe40_idDest" invisible="1"/>
                  <field name="nfe40_UFSaidaPais"/>
                  <field name="nfe40_xLocExporta"/>
                  <field name="nfe40_xLocDespacho"/>
              </group>
              <group name="nfe_vol" attrs="{'invisible': [('document_type', 'not in', ['55', '65'])]}">
                  <field name="nfe40_vol"/>
              </group>
          </page>
          <page name="finance" position="inside">
              <group name="nfe_finance" attrs="{'invisible': [('document_type', 'not in', ['55', '65'])]}">
                  <field name="nfe40_detPag"/>
              </group>
              <group>
                  <field name="nfe40_cobr"/>
              </group>
          </page>
          <field name="customer_additional_data" position="after">
              <field name="nfe40_infAdic" attrs="{'invisible': [('document_type', 'not in', ['55', '65'])]}"/>
          </field>
      </field>
  </record>

  <record id="nfe_40_infadic_form" model="ir.ui.view">
      <field name="name">nfe.40.infadic.form</field>
      <field name="model">nfe.40.infadic</field>
      <field name="arch" type="xml">
          <form>
              <group>
                  <field name="nfe40_infCpl"/>
              </group>
          </form>
      </field>
  </record>

  <record id="nfe_40_detpag_form" model="ir.ui.view">
      <field name="name">nfe.40.detpag.form</field>
      <field name="model">nfe.40.detpag</field>
      <field name="arch" type="xml">
          <form>
              <group>
                  <field name="nfe40_tPag"/>
                  <field name="nfe40_vPag"/>
              </group>
          </form>
      </field>
  </record>

  <record id="nfe_40_cobr_form" model="ir.ui.view">
      <field name="name">nfe.40.cobr.form</field>
      <field name="model">nfe.40.cobr</field>
      <field name="arch" type="xml">
          <form>
              <group>
                  <field name="nfe40_fat"/>
                  <field name="nfe40_dup"/>
              </group>
          </form>
      </field>
  </record>

  <record id="nfe_40_fat_form" model="ir.ui.view">
      <field name="name">nfe.40.fat.form</field>
      <field name="model">nfe.40.fat</field>
      <field name="arch" type="xml">
          <form>
              <group>
                  <field name="nfe40_nFat"/>
                  <field name="nfe40_vOrig"/>
                  <field name="nfe40_vDesc"/>
                  <field name="nfe40_vLiq"/>
              </group>
          </form>
      </field>
  </record>

  <record id="nfe_40_dup_form" model="ir.ui.view">
      <field name="name">nfe.40.dup.form</field>
      <field name="model">nfe.40.dup</field>
      <field name="arch" type="xml">
          <form>
              <group>
                  <field name="nfe40_nDup"/>
                  <field name="nfe40_dVenc"/>
                  <field name="nfe40_vDup"/>
              </group>
          </form>
      </field>
  </record>

  <record id="nfe_40_vol_form" model="ir.ui.view">
      <field name="name">nfe.40.vol.form</field>
      <field name="model">nfe.40.vol</field>
      <field name="arch" type="xml">
          <form>
              <group>
                  <field name="nfe40_qVol"/>
                  <field name="nfe40_pesoL"/>
                  <field name="nfe40_pesoB"/>
              </group>
          </form>
      </field>
  </record>

</odoo>
