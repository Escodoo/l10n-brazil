<odoo>
    <record id="focus_nfse_res_company_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.res.company.form (in l10n_br_nfse_focus)</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="l10n_br_nfse.nfse_res_company_form" />
        <field name="arch" type="xml">
            <xpath expr="////notebook/page[@name='fiscal']/notebook/page/group[@name='city_specific_nfse_settings']/field[@name='provedor_nfse']" position="after">
                <field name="nfse_environment"  attrs="{'invisible': [('provedor_nfse', '!=', 'focusnfe')]}" />
            </xpath>
        </field>
    </record>
</odoo>