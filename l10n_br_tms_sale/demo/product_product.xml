                model="product.template"
                name="res_id"
            />
            <field name="company_id" ref="l10n_br_base.empresa_lucro_presumido" />
        </record>

        <!-- icms_origin property for transport_service_sale for simples nacional company -->
        <record
            forcecreate="True"
            id="icms_origin_transport_service_sale_sn"
            model="ir.property"
        >
            <field name="name">icms_origin</field>
            <field
                name="fields_id"
                ref="l10n_br_fiscal.field_product_template__icms_origin"
            />
            <field name="value">0</field>
            <field name="type">selection</field>
            <field
                eval="'product.template,'+str(obj().env.ref('l10n_br_tms_sale.transport_service_sale').product_tmpl_id.id)"
                model="product.template"
                name="res_id"
            />
            <field name="company_id" ref="l10n_br_base.empresa_simples_nacional" />
        </record>
